<launch>
    <arg name="camera_name" default="camera" />
    <arg name= "left_cam_name" value= "flea14150439" />
    <arg name= "right_cam_name" value= "flea14150441" />

    <node pkg="teleop_vision"
          type="robot_to_camera_aruco"
          name="robot_to_camera_aruco"
          output="screen">
	 <param name="cam_name" value= "$(arg left_cam_name)" />
        <param name="image_transport_namespace" 
		value="/$(arg camera_name)/left/image_color/"/>

        <param name= "cam_pose_topic_name"
               value= "/$(arg camera_name)/left/board_to_camera "/>

        <param name= "robot_pose_topic_name"
               value= "/dvrk/PSM2/position_cartesian_current"/>

        <param name= "frequency" value= "30" />
        <param name= "number_of_points_per_axis" value= "3" />
        <param name= "visual_axis_length" value= "0.0436" />
       <!-- <param name="image_transport" value="compressed"/>-->

    </node>
    <!-- <param name="$(arg camera_name)/left/image_color/resized/downscaling_factor" value="3"/> -->
</launch>
